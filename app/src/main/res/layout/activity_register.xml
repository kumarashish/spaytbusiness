<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@drawable/bg"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"



        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
               android:layout_marginTop="20dp"
                android:fontFamily="@font/rgular"
                android:text="Company Details"
                android:textColor="@android:color/white"
                android:textSize="28dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </RelativeLayout>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressbar"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <LinearLayout



            android:id="@+id/mainView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/input_company_name"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="20dp"

            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/user"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/companyname"
                android:fontFamily="@font/light"
                android:textColorHint="@color/lightText"
                android:hint="Company Name"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:tint="@color/lightText"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/home1"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <Spinner
                    android:id="@+id/categories"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="Category"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="-5dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/input_doornumber"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="20dp"

                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_marginLeft="-10dp"
                        android:tint="@color/lightText"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/map_icon"
                        android:layout_width="50dp"
                        android:layout_height="30dp" />
                    <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/doorNumber"
                        android:fontFamily="@font/light"
                        android:textColorHint="@color/lightText"
                        android:hint="Door Number"
                        android:textSize="18dp"
                        android:textColor="@android:color/white"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/input_sreet"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="20dp"

            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="-10dp"
                android:tint="@color/lightText"
                android:layout_gravity="center_vertical"
                android:src="@drawable/map_icon"
                android:layout_width="50dp"
                android:layout_height="30dp" />
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/street"
                android:fontFamily="@font/light"
                android:textColorHint="@color/lightText"
                android:hint="StreetName"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/input_city"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="-10dp"
                    android:tint="@color/lightText"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_icon"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/city"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="City"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/input_pincode"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="-10dp"
                    android:tint="@color/lightText"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_icon"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />
                <EditText
                    android:inputType="number"
                    android:maxLength="5"
                    android:id="@+id/zipCode"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="PLZ"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </android.support.design.widget.TextInputLayout>

        <View
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/input_c_phone"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/smartphone"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:inputType="number"
                android:id="@+id/companyphonenumber"
                android:fontFamily="@font/light"
                android:textColorHint="@color/lightText"
                android:hint="Company Phone Number"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
            </android.support.design.widget.TextInputLayout>
        <View
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/input_c_email"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/email"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/companyEmailId"
                android:fontFamily="@font/light"
                android:textColorHint="@color/lightText"
                android:hint="Company Email"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
            </android.support.design.widget.TextInputLayout>
        <View
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginRight="20dp"

            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/user"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/companyVatId"
                android:fontFamily="@font/light"
                android:textColorHint="@color/lightText"
                android:hint="VAT ID"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/email"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/paypalId"
                android:fontFamily="@font/light"
                android:textColorHint="@color/lightText"
                android:hint="PayPal Email"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>



        <View
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
            <View

                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressbar2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <Button
            android:id="@+id/submit"
            android:background="@color/blue"

            android:textColor="@android:color/white"
            android:text="Submit"
            android:fontFamily="@font/light"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <View

            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>