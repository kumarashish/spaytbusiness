<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"


            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/rgular"
                    android:text="Sign Up"
                    android:textColor="@android:color/white"
                    android:textSize="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </RelativeLayout>

            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <Spinner
                    android:backgroundTint="@color/white"
                    android:id="@+id/salutation"
                    android:entries="@array/salutation"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="Salutation"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/input_fname"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:id="@+id/firstName"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="First Name"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/input_lname"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:id="@+id/lastName"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="Last Name"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/input_email"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/email"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="Email"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/input_password"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pass"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="Password"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/input_c_password"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="20dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/confirm_pass"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:id="@+id/confirmPassword"
                    android:inputType="textPassword"
                    android:fontFamily="@font/light"
                    android:textColorHint="@color/lightText"
                    android:hint="Confirm Password"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <ProgressBar
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/next"
                android:background="@color/blue"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"
                android:text="Next"
                android:fontFamily="@font/light"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <View

                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>