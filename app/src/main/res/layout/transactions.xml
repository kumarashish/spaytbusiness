<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="160dp" />
            <TextView

                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/rgular"
                android:textSize="18dp"
                android:text="24 - December\n2018"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="160dp" />
        </RelativeLayout>
        <ImageView
            android:layout_marginRight="15dp"
            android:layout_marginTop="-30dp"
            android:layout_gravity="end"
            android:padding="20dp"
            android:background="@drawable/blue_circe"
            android:tint="@color/white"
            android:src="@drawable/edit"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressbar"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ListView
                android:id="@+id/listView"
android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/no_transactionView"
                    android:text="No transactions for selected date"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <Button
                android:id="@+id/new_transaction"
                android:fontFamily="@font/light"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Neue Transakation Hinzufgen"
                android:layout_alignParentBottom="true"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="59dp" />

        </RelativeLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>